<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/artworkImage"
        android:src="@drawable/sombrathumb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:id="@+id/textBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="40">

        <TextView
            android:id="@+id/artworkTitle"
            android:text="@string/placeholder_short"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_shadow_white"
            android:paddingStart="5dp"
            android:paddingEnd="2dp"
            android:paddingTop="5dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/artworkBlurb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_long"
            android:paddingStart="5dp"
            android:paddingEnd="2dp"
            android:textColor="@color/text_shadow_gray"/>

    </LinearLayout>

</LinearLayout>